	<script>
		// Filter
		const select = document.getElementById('body-kits-filter');
		const filterForm = document.getElementById('filter-form');
		const paginationDiv = document.getElementById('pagination-div');

		select.value = "{{f}}";
		if (!select.value) {
			select.value = 'all';
		} else {
			paginationDiv.classList.add('hidden');
		}

		select.addEventListener('change', async (e) => {
			let selectedValue = select.value;
			if (selectedValue === 'all') {
				filterForm.setAttribute('action', '/carrocerias');
			} else {
				filterForm.setAttribute('action', `/carrocerias/filter?f=${selectedValue}`);
			}
			filterForm.submit();
		})

		// Pagination
		const urlParams = new URLSearchParams(window.location.search)
		const page = parseInt(urlParams.get('p') || 0)

		const previousLink = document.querySelector('#previous');
		const nextLink = document.querySelector('#next');
		const pageIndicator = document.querySelector('#page-indicator');
		const documentCount = "{{ documentCount }}" || null;
		const totalPages = Math.ceil(documentCount / 30);
		const filterIsActive = "{{f}}";

		if (filterIsActive) {
			paginationDiv.classList.add('hidden');
		}

		previousLink.setAttribute('href', `/carrocerias?p=${page - 1}`)
		nextLink.setAttribute('href', `/carrocerias?p=${page + 1}`)
		pageIndicator.innerHTML = `Página <b">${page + 1}</b> / <a class="font-bold text-emerald-400" href="/carrocerias?p=${+totalPages - 1}">${totalPages}</a>`

		if (page === 0) {
			previousLink.setAttribute('aria-disabled', 'true')
			previousLink.classList.add('disable-links', 'text-gray-500', 'border-gray-500')
		}

		if (+bodyKitsLength.value < 30) {
			nextLink.setAttribute('aria-disabled', 'true');
			nextLink.classList.add('disable-links', 'text-gray-500', 'border-gray-500');
		}
	</script>

</main>