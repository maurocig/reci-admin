{{>navbar}}

<main class="mt-[80px]">
	<a onclick="window.history.back()">
		<button class="go-back">
			<i class="material-icons">arrow_back</i>
		</button>
	</a>
	<a href="/">
		<button class="go-back">
			<i class="material-icons">home</i>
		</button>
	</a>

	<i class="material-icons icon-clients center" style="font-size: 50px; display: block; margin-bottom: .2rem;">group</i>
	<h1 class="title">Clientes</h1>

	<div class="grid items-center grid-cols-1 mb-3 sm:grid-cols-3">
		<form action="/clientes/search" method="GET" class="flex items-center gap-2">
			<input name="q" placeholder="Nombre de cliente"
				class="inline w-3/4 h-10 px-2 py-1 m-0 mx-auto mb-0 bg-gray-200 rounded-full" style="margin: 0 !important;">
			</input>
			<button type="submit inline w-1/4 ml-2 bg-green-400 self-center rounded-full p-2"><i
					class="inline text-white material-icons">search</i></button>
		</form>
		<div></div>
		<a href="/clientes/nuevo">
			<button class="rounded-md button-success" style="margin-inline: auto;margin-right: 0rem;">Nuevo
				cliente</button>
		</a>
	</div>

	{{#if clients}}
	<div class="table-container">
		<table>
			<tr class="table-headers-row bg-slate-200 hover:bg-slate-200">
				<th>Raz√≥n Social</th>
				<th>Nombre comercial</th>
				<th class="center">Equipos</th>
				<th class="max-w-[50px]"># Cliente</th>
			</tr>
			{{#each clients}}
			<tr>
				<td class="min-w-[120px] max-w-[170px]">
					<a href="/clientes/{{_id}}"><strong>{{name}} </strong></a>
				</td>
				<td class="min-w-[120px]">
					<a href=" /clientes/{{_id}}">
						{{#if brandName}}
						{{brandName}}
						{{else}}
						No registra
						{{/if}}
					</a>
				</td>
				<td class="center">
					<a href="/clientes/{{_id}}">
						{{refUnits.length}}
					</a>
				</td>
				<td class="center">
					<a href="/clientes/{{_id}}">
						<strong>
							{{clientNumber}}
						</strong>
					</a>
				</td>

				{{!-- <td class="center" style="min-width: 40px;"> --}}
				{{!-- 	<a href="/clientes/editar/{{_id}}"> --}}
				{{!-- 		<span class="flex justify-center table-icon-container"><img src="/assets/edit-icon.png" alt=""></span> --}}
				{{!-- 	</a> --}}
				{{!-- </td> --}}

			</tr>
			{{/each}}
		</table>
	</div>
	{{else}}
	<h2 class="subtitle center" style="margin-top: 3rem;">No se encontraron clientes.</h2>
	{{/if}}

</main>