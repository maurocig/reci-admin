{{>navbar}}

<main>
	<a href="/clientes">
		<button class="go-back">
			Ver clientes</button>
	</a>

	<h1 class="title">Nuevo cliente</h1>

	<h2 class="subtitle">Información</h2>
	<form class="form-container" action="/clientes" method="post">
		<div class="form-field">
			<label for="name">Razón social:</label>
			<input type="text" name="name" placeholder="RECI Importaciones" />
		</div>
		<div class="form-field">
			<label for="email">E-mail:</label>
			<input type="email" name="email" placeholder="correo@casilla.com" />
		</div>
		<div class="form-field">
			<label for="phone">Teléfono:</label>
			<input type="number" name="phone" placeholder="123 456789" />
		</div>
		<button class="button-success button-form" role="submit">Guardar</button>
	</form>
</main>