<main>
	<a href="/clientes">
		<button class="go-back">
			Ver todos</button>
	</a>

	<h1 class="title">Detalle del cliente</h1>

	<section>
		<h2 class="subtitle">Información</h2>
		<div class="table-container">
			<table>
				<tr>
					<th>R. Social</th>
					<th>E-mail</th>
					<th>Teléfono</th>
					<th>Equipos</th>
				</tr>
				<tr class="row">
					<td>
						<strong>{{client.name}} </strong>
					</td>
					<td>
						{{client.email}}
					</td>
					<td>
						{{client.phone}}
					</td>
					<td>
						{{client.refUnits.length}}
					</td>
				</tr>
			</table>
		</div>
		<a href="/clientes/{{client._id}}/editar">
			<button class="button-new">Editar</button>
		</a>
	</section>

	<section>
		<h2 class="subtitle">Equipos</h2>
		<div class="table-container">
			<table>
				<tr>
					<th>N° Serie</th>
					<th>Modelo</th>
					<th>Servicios</th>
				</tr>
				{{#each refUnits}}
				<tr>
					<td>
						<a href="/equipos/{{this._id}} ">
							{{this.serialNumber}}
						</a>
					</td>
					<td>{{this.model}}</td>
					<td>{{this.services.length}}</td>
				</tr>
				{{/each}}
			</table>
		</div>

		<a href="/equipos/nuevo/{{client._id}}">
			<button class="button-success" style="margin-inline: auto;">Agregar Equipo</button>
		</a>

