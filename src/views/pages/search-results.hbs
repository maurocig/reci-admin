{{>navbar}}

<main class="mt-[80px]">
	<a onclick="window.history.back()">
		<button class="go-back">
			<i class="material-icons">arrow_back</i>
		</button>
	</a>
	<a href="/">
		<button class="go-back">
			<i class="material-icons">home</i>
		</button>
	</a>

	<i class="material-icons icon-clients center"
		style="font-size: 50px; display: block; margin-bottom: .2rem;">search</i>
	<h1 class="title">Buscar matrícula</h1>

	{{#if refUnits}}
	<h2 class="text-slate-200 text-xl font-semibold mb-3 flex">
		<i class="material-icons icon-clients center"
			style=" display: inline; margin:0 .7rem 0 0; font-size: 1.5rem; align-self: center;">ac_unit</i>
		Equipos
	</h2>
	<div class="table-container">
		<table class="mb-2">
			<tr class="table-headers-row bg-slate-300/80 hover:bg-slate-300/80">
				<th>Matrícula</th>
				<th>Modelo</th>
				<th class="min-w-[150px]">Cliente</th>
				<th class="min-w-[120px]">Nº Serie</th>
				<th>Ingresado</th>
				<th class="pr-0">Servicios</th>
			</tr>
			{{#each refUnits}}
			<tr>
				<td>
					<a href="/equipos/{{this._id}} ">
						{{#if this.plate}}
						{{this.plate}}
						{{else}}
						<span class="text-red-500">No registra</span>
						{{/if}}
					</a>
				</td>
				<td>
					<a href="/equipos/{{_id}}">
						{{model}}
					</a>
				</td>
				<td>
					<a href="/equipos/{{_id}}">
						{{client.name}}
					</a>
				</td>
				<td>
					<a href="/equipos/{{_id}}">
						{{#if (isPlateNumber this.serialNumber)}}
						<span class="text-red-600">No registra</span>
						{{else}}
						{{#if this.soldByReci}}
						<span class="font-normal text-emerald-600">
							{{serialNumber}}
						</span>
						{{else}}
						<span class="">{{serialNumber}}</span>
						{{/if}}
						{{/if}}
					</a>
				</td>
				<td>
					<a href="/equipos/{{_id}}">
						{{formatDate createdAt}}
					</a>
				</td>
				<td class="max-w-[90px] text-center hidden lg:block">
					<a href="/equipos/{{_id}}">
						{{this.services.length}}
					</a>
				</td>
			</tr>
			{{/each}}
		</table>
	</div>
	{{else}}
	<h2 class="subtitle center" style="margin-top: 1rem;">No hay equipos registrados.</h2>
	{{/if}}

	{{#if bodyKits}}
	<h2 class="text-slate-200 text-xl font-semibold mb-3 flex">
		<i class="material-icons icon-clients center"
			style=" display: inline; margin:0 .7rem 0 0; font-size: 1.5rem; align-self: center;">local_shipping</i>
		Carrocerías
	</h2>
	<div class="table-container">
		<table class="mb-2">
			<tr class="table-headers-row bg-slate-300/80 hover:bg-slate-300/80">
				<th>Matrícula</th>
				<th>Modelo</th>
				<th class="min-w-[150px]">Cliente</th>
				<th class="min-w-[120px]">Nº Serie</th>
				<th>Ingresada</th>
				<th class="hidden lg:block max-w-[90px] pr-0">Servicios</th>
			</tr>
			{{#each bodyKits}}
			<tr>
				<td>
					<a href="/carrocerias/{{this._id}} ">
						{{#if this.plate}}
						{{this.plate}}
						{{else}}
						<span class="text-red-500">No registra</span>
						{{/if}}
					</a>
				</td>
				<td>
					<a href="/carrocerias/{{_id}}">
						{{model}}
					</a>
				</td>
				<td>
					<a href="/carrocerias/{{_id}}">
						{{client.name}}
					</a>
				</td>
				<td>
					<a href="/carrocerias/{{_id}}">
						{{#if (eq this.plate this.serialNumber)}}
						<span class="text-red-600">No registra</span>
						{{else}}
						{{#if this.soldByReci}}
						<span class="font-normal text-emerald-600">
							{{serialNumber}}
						</span>
						{{else}}
						<span class="">{{serialNumber}}</span>
						{{/if}}
						{{/if}}
					</a>
				</td>
				<td>
					<a href="/carrocerias/{{_id}}">
						{{formatDate createdAt}}
					</a>
				</td>
				<td class="max-w-[90px] text-center hidden lg:block">
					<a href="/carrocerias/{{_id}}">
						{{this.services.length}}
					</a>
				</td>
			</tr>
			{{/each}}
		</table>
	</div>
	{{else}}
	<h2 class="subtitle center" style="margin-top: 1rem;">No hay carrocerías registradas.</h2>
	{{/if}}

</main>